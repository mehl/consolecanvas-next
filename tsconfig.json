{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "declaration": true,
        "jsx": "react-jsx",
        "outDir": "dist",
        "rootDir": ".",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": false
    },
    "include": [
        "src",
        "demo"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}